.valores
	&__box
		width 100%
		text-align center
		margin 0 auto
	&__circle1
		width 100%
		// border-radius 50%
		background peru
	
	&__circle2
		width 100px
		height 100px
		border-radius 50%
		background purple
		position relative
		&::before
			content ""
			display block
			margin auto
			width 50px
			height 50px
			position absolute
			left 0
			right 0
			top 0
			bottom 0
			background-color red
			border-radius 50%
			border 3px solid white
			padding 1em
			
			
	&__circle3
		width 100px
		height 100px
		border-radius 50%
		background aqua
		
	&__circle4
		width 0
		height 0
		margin 0 auto
		display	block
		border-top 100px solid transparent
		border-bottom 200px solid purple
		border-left 100px solid transparent	
		border-right 100px solid transparent	
		
	&__circle5
		width 0
		height 0
		margin	 0 auto
		display	block
		border-top 100px solid peru
		border-bottom 100px solid yellow	
		border-left 100px solid yellow		
		border-right 100px solid transparent	
		border-radius 50%
		position relative	
		&::before
			content	""
			display	block
			margin	auto
			width 10px
			height 10px
			border-radius 50%
			background	black
			position absolute
			bottom 50px
			left 20px